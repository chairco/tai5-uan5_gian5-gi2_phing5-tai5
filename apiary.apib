              "語言腔口": "閩南語",
              "外語資料": "漂漂亮亮"
            },
            {
              "外語請教條項目編號": "34267",
              "外語語言": "華語",
              "種類": "字詞",
              "語言腔口": "閩南語",
              "外語資料": "愛漂亮"
            }
          ]
